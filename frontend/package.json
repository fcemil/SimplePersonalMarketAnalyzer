{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "npm run setup:py",
    "setup:py": "sh -c 'cd .. && if [ ! -d .venv ]; then python3 -m venv .venv; fi && .venv/bin/python -m pip install --upgrade pip >/dev/null 2>&1 && .venv/bin/pip install -r backend/requirements.txt'",
    "dev": "concurrently -n UI,API -c \"#cb6d51,#4a7c89\" \"npm:dev:ui\" \"npm:dev:api\"",
    "dev:ui": "vite",
    "dev:api": "sh -c 'if [ -x ../.venv/bin/python ]; then ../.venv/bin/python ../backend/run.py; else python ../backend/run.py; fi'",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "lightweight-charts": "^5.1.0",
    "vue": "^3.5.24",
    "pinia": "^2.2.6",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "concurrently": "^8.2.2",
    "vite": "^5.4.10"
  }
}
